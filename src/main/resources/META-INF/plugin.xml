<idea-plugin>
    <id>org.example.roshan_chirayil_hw2</id>
    <name>Design Pattern Generator</name>
    <vendor email="rchira2@uic.edu" url="http://www.yourcompany.com">UIC</vendor>

    <description><![CDATA[
    Easy way to inject design patterns into your code based on a input.json file.<br>
    <em>Select one of the patterns and click generate. The input file will be read and taken care of</em>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <toolWindow id="Design Pattern Generator"  anchor="right" factoryClass="com.cs474.DesignPatternToolWindow"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->

    </actions>
</idea-plugin>